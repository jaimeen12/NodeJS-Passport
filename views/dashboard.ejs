<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= name %></p>

<div class="d-grid gap-2">
    <a href="/createNoteForm" class="btn btn-lg btn-primary">Create a Note</a>
    <a href="/portswiggerForm" class="btn btn-lg btn-primary">Portswigger</a>
  </div>

  <br>

  <table class="table table-hover">
    <thead>
      <tr class="table-dark">
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Status</th>
        <th scope="col">User</th>
        <th scope="col">Update/Delete</th>
      </tr>
    </thead>
    <tbody>
    <% notes.forEach(note => { %>
      <tr class="table-light">
        <td><%= note.id %></td>
        <td><%= note.title %></td>
        <td><%= note.status %></td>
        <td><%= note.created_by %></td>

        <td><a class="btn btn-raised btn-danger" href="/updateNoteForm/<%= note.id %>">Update</a>  <a class="btn btn-raised btn-danger" href="/deleteNote/<%= note.id %>">Delete</a></td>
      </tr>          
      <% }); %>
    </tbody>
  </table>


  <a href="/user/logout" class="btn btn-secondary">Logout</a>